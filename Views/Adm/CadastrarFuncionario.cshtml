@model projeto.DTO.FuncionarioDTO;
@{
    ViewData["Title"] = "Cad Funcionários";
}

<h3>Novo funcionário</h3>
<hr/>

<form method="POST" asp-action="Salvar" asp-controller="Funcionario">
    <input type="hidden" asp-for="Id" value="0">

    <label>Cargo</label>
    <input type="text" class="form-control" asp-for="Cargo" placeholder="ex: Software enginner">
    <span asp-validation-for="Cargo"></span><br/>

    <label>Matricula</label>
    <input type="text" class="form-control" asp-for="Matricula" placeholder="ex: 1234567">
    <span asp-validation-for="Matricula"></span><br/>

    <label>Nome</label>
    <input type="text" class="form-control" asp-for="Nome" placeholder="ex: Nome completo">
    <span asp-validation-for="Nome"></span><br/>

    <label>Unidade GFT</label>
    <select class="form-control" asp-for="GftID" asp-items='@(new SelectList(@ViewBag.gfts, "Id", "Nome"))'>
        <option value="">Selecione</option>
    </select>
    <span asp-validation-for="GftID"></span><br/>

    <fieldset>
        <legend>Tecnologias</legend>
        <br/>
        <a class="btn btn-primary" id="tecnologia">Adc outra tecnologia</a>
        <br/><br/>

        <div id="render">
        </div>
    </fieldset>

    <input type="hidden" asp-for="TecnologiaID" id="tecId">
    <span asp-validation-for="TecnologiaID"></span><br/><br/>

    <button class="btn btn-success">Cadastrar funcionário</button>
</form>

<script src="~/js/cad-funcionario.js"></script>