@model IEnumerable<projeto.Models.Tecnologia>
@{
    ViewData["Title"] = "Tecnologias";
    Layout = "_Layout";
}

<div>
    <h2>Tecnologias</h2><br/>
    <a class="btn btn-primary" asp-controller="Adm" asp-action="CadastrarTecnologia">Cadastrar tecnologia</a>
</div>

<hr/>
<table id="tecnologias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
        <tbody>
        @foreach (var tecnologias in Model)
            {
                <tr>
                    <td>@tecnologias.Id</td>
                    <td>@tecnologias.Nome</td>
                    <td>
                        <a class="btn btn-primary" href="/Adm/EditarTecnologia/@tecnologias.Id">Editar</a> 
                        <form asp-action="Deletar" asp-controller="Tecnologia" style="display: inline;">
                            <input type="hidden" name="id" id="id" value="@tecnologias.Id">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>                
            }
        </tbody>
</table>