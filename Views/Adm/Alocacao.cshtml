@model projeto.DTO.AlocacaoDTO
@{
    ViewData["Title"] = "Alocação";
}

<h2>Alocação</h2>

<form method="POST" asp-controller="Funcionario" asp-action="AdcVaga">
    <input type="hidden" asp-for="Id" value="0">

    <label>Funcionário</label>
    <select class="form-control" asp-for="FuncionarioID" asp-items='@(new SelectList(@ViewBag.funcionario, "Id", "Nome"))'></select>
    <br/>

    <label>Vaga</label>
    <select class="form-control" asp-for="VagaID" asp-items='@(new SelectList(@ViewBag.vaga, "Id", "Projeto"))'></select>
    <br/>

    <button class="btn btn-success">Cadastrar tecnologia</button>
</form>