@model projeto.DTO.TecnologiaDTO;
@{
    ViewData["Title"] = "Cad Tecnologia";
}

<h3>Nova tecnologia</h3>
<hr/>

<form method="POST" asp-controller="Tecnologia" asp-action="Salvar">
    <input type="hidden" asp-for="Id" value="0">

    <label>Nome</label>
    <input type="text" class="form-control" asp-for="Nome" placeholder=".NET">
    <span asp-validation-for="Nome"></span><br/>

    <button class="btn btn-success">Cadastrar tecnologia</button>
</form>